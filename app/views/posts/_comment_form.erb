<% if !current_author.nil? %>
<% comment ||= @post.comments.build%>
<div class='comment_form'>
	<%= form_with model: [ @post, comment ], local: false  do |form| %>
    <div class="field">
      <%= form.text_area :body, class: 'form-control', rows: "2"%>
    </div>
<%= form.hidden_field :parent_id, value: parent_comment&.id %>
    <div class="actions " >
      <%= form.submit nil, class: "butn"%>
    </div>
  <% end %>
</div>
<% else %>
<p><%= link_to "Log In", login_path %> or <%= link_to "Sign Up", signup_path %> to leave comments</p>
<% end %>