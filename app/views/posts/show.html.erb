<% if @show_register %>
  <script>
    $(function(){   
      $(".modal_login").show()           
      $('.close').click(function(){
        $(".modal_login").css("display", "none")
      }); 
    })
  </script>
<%end%>


<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<div class="image">
	<img src='<%= @post.image %>' width='300px'/>
</div>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h4>Views: <%= @post.views%></h4>
  <%= render 'posts/modal'%>

      <%if current_author && current_author.id == @post.author %>
      <div class='btn btn-warning'><%= link_to 'Edit', edit_post_path(@post) %></div> 
      <div class='btn btn-danger'><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    <%end%>

<div class='cont add_comment'>
  <h4>New Comment</h4>
  <%= render 'comment_form' %>
</div>

<div class='cont comment_list'>
  <h4>Comments: <%= @post.comments.count%></h4>
  
  <%= render 'comments_list' %>
</div>